<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ar.com.wolox.woloxtrainingmolina.SignUpActivity"
    android:orientation="vertical"
    android:background="@color/blanco"
    android:theme="@style/Theme.AppCompat.Light">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/guideline_editText"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_email"
        android:hint="@string/login_email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/guideline_editText"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password"
        android:hint="@string/login_password"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/guideline_editText"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password_confirm"
        android:hint="@string/signup_confirm_password"/>

    <include
        layout="@layout/tos_disclaimer"
        android:layout_height="@dimen/guideline_amarillo"
        android:layout_width="match_parent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/guideline_boton"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/signup_join"
        android:id="@+id/btn_join"
        android:background="@drawable/btn_azul"
        android:textColor="@color/blanco"/>

</LinearLayout>

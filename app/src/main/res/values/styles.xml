<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/GrayActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/GrayActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="GrayActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/action_bar_gray</item>
        <item name="android:titleTextStyle">@style/GrayActionBarTitleText</item>

        <item name="android:icon">@drawable/topbarlogo</item>

        <!-- Support library compatibility -->
        <item name="background">@color/action_bar_gray</item>
        <item name="titleTextStyle">@style/GrayActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="GrayActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="button.regular" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/guideline_boton</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:background">@drawable/btn_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button.blue" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/guideline_boton</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editText.regular" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/guideline_editText</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


</resources>
